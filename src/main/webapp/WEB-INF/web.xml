<web-app version="2.5">
	<display-name>Realty Crawler</display-name>
	<servlet>
		<servlet-name>CrawlerServlet</servlet-name>
		<servlet-class>com.github.matthesrieke.realty.CrawlerServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>CrawlerServlet</servlet-name>
		<url-pattern>/crawler</url-pattern>
	</servlet-mapping>
</web-app>
